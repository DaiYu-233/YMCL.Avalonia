<UserControl
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d"
    x:Class="YMCL.Views.Main.Pages.DownloadPages.CurseForgePages.ModFileResult"
    xmlns="https://github.com/avaloniaui"
    xmlns:asyncImageLoader="clr-namespace:AsyncImageLoader;assembly=AsyncImageLoader.Avalonia"
    xmlns:controls="clr-namespace:FluentAvalonia.UI.Controls;assembly=FluentAvalonia"
    xmlns:converter="clr-namespace:YMCL.Public.Module.Ui.Converter"
    xmlns:curseForgePages="clr-namespace:YMCL.Views.Main.Pages.DownloadPages.CurseForgePages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:properties="clr-namespace:YMCL.Public.Langs"
    xmlns:resourceFetcher="clr-namespace:YMCL.Public.Classes.Data.ResourceFetcher"
    xmlns:u="https://irihi.tech/ursa"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <UserControl.Resources>
        <converter:CountToUnitConverter x:Key="CountToUnitConverter" />
    </UserControl.Resources>
    <Border
        Background="{DynamicResource 1x}"
        CornerRadius="{DynamicResource MainCornerRadius}"
        Opacity="{DynamicResource MainOpacity}"
        Padding="10">
        <DockPanel>
            <Border
                Background="{DynamicResource 2x}"
                CornerRadius="{DynamicResource MainCornerRadius}"
                DockPanel.Dock="Top"
                Padding="10,5,10,5"
                VerticalAlignment="Top">
                <DockPanel
                    Margin="0,5,0,5"
                    Name="FileInfo"
                    x:DataType="resourceFetcher:IResourceEntry">
                    <Border
                        ClipToBounds="True"
                        CornerRadius="{DynamicResource MainCornerRadius}"
                        Height="50"
                        Margin="0,0,10,0"
                        Width="50">
                        <asyncImageLoader:AdvancedImage Source="{Binding Pic}" />
                    </Border>
                    <Button
                        DockPanel.Dock="Right"
                        IsEnabled="False"
                        Name="Favourite"
                        VerticalAlignment="Top">
                        <DockPanel>
                            <PathIcon
                                Data="F1 M 4.648438 12.675781 L 0.205078 8.349609 C 0.08138 8.225912 0.019531 8.079428 0.019531 7.910156 C 0.019531 7.760417 0.071615 7.623698 0.175781 7.5 C 0.279948 7.376303 0.406901 7.301434 0.556641 7.275391 L 6.689453 6.386719 L 9.443359 0.820312 C 9.495442 0.716146 9.573567 0.633139 9.677734 0.571289 C 9.7819 0.509441 9.889322 0.478516 10 0.478516 C 10.110677 0.478516 10.218099 0.509441 10.322266 0.571289 C 10.426432 0.633139 10.504557 0.716146 10.556641 0.820312 L 13.310547 6.386719 L 19.443359 7.275391 C 19.599609 7.301434 19.728189 7.373048 19.829102 7.490234 C 19.930012 7.607423 19.980469 7.744142 19.980469 7.900391 C 19.980469 8.076172 19.918619 8.225912 19.794922 8.349609 L 15.351562 12.675781 L 16.396484 18.789062 C 16.402994 18.815104 16.40625 18.850912 16.40625 18.896484 C 16.40625 19.065756 16.3444 19.21224 16.220703 19.335938 C 16.097004 19.459635 15.950521 19.521484 15.78125 19.521484 C 15.670572 19.521484 15.572916 19.498697 15.488281 19.453125 L 10 16.5625 L 4.511719 19.453125 C 4.427083 19.498697 4.329427 19.521484 4.21875 19.521484 C 4.049479 19.521484 3.902995 19.459635 3.779297 19.335938 C 3.655599 19.21224 3.59375 19.065756 3.59375 18.896484 C 3.59375 18.850912 3.597005 18.815104 3.603516 18.789062 Z M 5.048828 17.753906 L 10 15.146484 L 14.951172 17.753906 C 14.794922 16.829428 14.640299 15.909831 14.487305 14.995117 C 14.33431 14.080404 14.173177 13.160808 14.003906 12.236328 L 18.017578 8.330078 L 12.480469 7.529297 C 12.057291 6.689453 11.642252 5.852865 11.235352 5.019531 C 10.82845 4.186199 10.416666 3.349609 10 2.509766 C 9.583333 3.349609 9.171549 4.186199 8.764648 5.019531 C 8.357747 5.852865 7.942708 6.689453 7.519531 7.529297 L 1.982422 8.330078 L 5.996094 12.236328 C 5.826823 13.160808 5.66569 14.080404 5.512695 14.995117 C 5.3597 15.909831 5.205078 16.829428 5.048828 17.753906 Z "
                                Margin="0,0,0,1"
                                Name="Icon"
                                Width="15" />
                            <TextBlock
                                Margin="5,1,0,0"
                                Name="Text"
                                Text="{Binding Source={x:Static properties:LangHelper.Current}, Path=Resources.Favourite}" />
                        </DockPanel>
                    </Button>
                    <DockPanel LastChildFill="False" VerticalAlignment="Center">
                        <SelectableTextBlock DockPanel.Dock="Top" Text="{Binding Name}" />
                        <SelectableTextBlock
                            DockPanel.Dock="Top"
                            FontSize="12"
                            Foreground="{DynamicResource GrayColor}"
                            Text="{Binding Summary}"
                            TextWrapping="Wrap" />
                        <SelectableTextBlock
                            DockPanel.Dock="Top"
                            FontSize="12"
                            Foreground="{DynamicResource GrayColor}">
                            <Run Text="{Binding DisplayType, Mode=OneWay}" />
                            <Run Text="," />
                            <Run Text="{Binding DownloadCount, Mode=OneWay, Converter={StaticResource CountToUnitConverter}}" />
                            <Run Text="{Binding Source={x:Static properties:LangHelper.Current}, Path=Resources.Download}" />
                            <Run Text="," />
                            <Run Text="{Binding LastUpdateTime, Mode=OneWay}" />
                            <Run Text="{Binding Source={x:Static properties:LangHelper.Current}, Path=Resources.Update}" />
                        </SelectableTextBlock>
                    </DockPanel>
                </DockPanel>
            </Border>
            <Border
                Background="{DynamicResource 2x}"
                ClipToBounds="True"
                CornerRadius="{DynamicResource MainCornerRadius}"
                DockPanel.Dock="Top"
                Margin="0,10,0,0"
                Name="InfoBorder"
                VerticalAlignment="Top"
                x:DataType="curseForgePages:ModFileResult">
                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                    <u:SelectionList
                        AutoScrollToSelectedItem="True"
                        ItemsSource="{Binding Versions}"
                        Margin="10,5,10,5"
                        Name="NavMenu"
                        SelectedItem="{Binding SelectedShortVersion}"
                        VerticalAlignment="Top">
                        <u:SelectionList.Styles>
                            <Style Selector="u|SelectionListItem:not(:selected)">
                                <Style Selector="^ TextBlock">
                                    <Setter Property="Foreground" Value="{DynamicResource TextColor}" />
                                </Style>
                            </Style>
                        </u:SelectionList.Styles>
                        <u:SelectionList.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal" />
                            </ItemsPanelTemplate>
                        </u:SelectionList.ItemsPanel>
                        <u:SelectionList.Indicator>
                            <Border
                                Background="{DynamicResource SystemAccentColor}"
                                CornerRadius="99999"
                                Height="22"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch" />
                        </u:SelectionList.Indicator>
                        <u:SelectionList.ItemTemplate>
                            <DataTemplate DataType="resourceFetcher:ShortVersionEntry">
                                <StackPanel Margin="3,0,1,0" Orientation="Horizontal">
                                    <TextBlock Foreground="{DynamicResource TextColor}" Text="{Binding DisplayVersion}" />
                                </StackPanel>
                            </DataTemplate>
                        </u:SelectionList.ItemTemplate>
                    </u:SelectionList>
                </ScrollViewer>
            </Border>
            <Grid>
                <ScrollViewer Margin="0,10,0,0">
                    <ItemsControl Name="ItemsControl" x:DataType="curseForgePages:ModFileResult">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <VirtualizingStackPanel />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate DataType="resourceFetcher:VersionEntry">
                                <ContentControl Content="{Binding Expander}" Margin="0,0,0,10" />
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
                <controls:ProgressRing
                    Height="50"
                    IsVisible="False"
                    Margin="0,50,0,50"
                    Name="Ring"
                    Width="50" />
            </Grid>
        </DockPanel>
    </Border>
</UserControl>