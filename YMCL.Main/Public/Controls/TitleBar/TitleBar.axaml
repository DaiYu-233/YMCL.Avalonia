<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" x:Class="YMCL.Main.Public.Controls.TitleBar">
	<Border Background="{DynamicResource TitleBarColor}" VerticalAlignment="Top" Height="30" CornerRadius="8,8,0,0" >
		<Grid Name="MoveDragArea" Background="{DynamicResource TitleBarColor}" Margin="8,0,8,0">
			<TextBlock/>
			<Button Classes="icon-button" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,-5,0"  Name="CloseButton" Content="{DynamicResource Close}"/>
			<Button Classes="icon-button" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,21,0" Name="MaximizeButton" Content="{DynamicResource Maximize}"/>
			<Button Classes="icon-button" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,8,47,0" Name="MinimizeButton" Content="{DynamicResource Minimize}"/>
		</Grid>
	</Border>
</UserControl>
