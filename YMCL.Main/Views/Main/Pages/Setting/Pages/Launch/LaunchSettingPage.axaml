<UserControl
    x:Class="YMCL.Main.Views.Main.Pages.Setting.Pages.Launch.LaunchSettingPage"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:javaEntry="clr-namespace:MinecraftLaunch.Classes.Models.Game;assembly=MinecraftLaunch"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:properties="clr-namespace:YMCL.Main.Public.Langs"
    xmlns:ui="clr-namespace:FluentAvalonia.UI.Controls;assembly=FluentAvalonia"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Border x:Name="Root" CornerRadius="8">
        <Border.Transitions>
            <Transitions>
                <ThicknessTransition Property="Margin" Duration="0:0:0.45" />
            </Transitions>
        </Border.Transitions>
        <ScrollViewer>
            <StackPanel Margin="10" Spacing="10">
                <Border
                    Padding="6.5"
                    Background="{DynamicResource 1x}"
                    CornerRadius="5">
                    <DockPanel>
                        <TextBlock
                            Margin="10,0,20,0"
                            VerticalAlignment="Center"
                            FontFamily="{DynamicResource Font}"
                            FontSize="14"
                            Text="{x:Static properties:MainLang.MinecraftFolder}" />
                        <Button
                            x:Name="DelSeletedMinecraftFolderBtn"
                            Margin="6.5,0,0,0"
                            Content="{x:Static properties:MainLang.DelSeletedItem}"
                            DockPanel.Dock="Right"
                            FontFamily="{DynamicResource Font}" />
                        <Button
                            x:Name="AddMinecraftFolderBtn"
                            Margin="6.5,0,0,0"
                            Content="{x:Static properties:MainLang.AddFolder}"
                            DockPanel.Dock="Right"
                            FontFamily="{DynamicResource Font}" />
                        <ComboBox
                            x:Name="MinecraftFolderComboBox"
                            HorizontalAlignment="Stretch"
                            DockPanel.Dock="Left"
                            FontFamily="{DynamicResource Font}" />
                    </DockPanel>
                </Border>
                <Border
                    Padding="6.5"
                    Background="{DynamicResource 1x}"
                    CornerRadius="5">
                    <DockPanel>
                        <TextBlock
                            Margin="10,0,20,0"
                            VerticalAlignment="Center"
                            FontFamily="{DynamicResource Font}"
                            FontSize="14"
                            Text="Java" />
                        <Button
                            x:Name="AutoScanBtn"
                            Margin="6.5,0,0,0"
                            Content="{x:Static properties:MainLang.AutoScan}"
                            DockPanel.Dock="Right"
                            FontFamily="{DynamicResource Font}" />
                        <Button
                            x:Name="ManualAddBtn"
                            Margin="6.5,0,0,0"
                            Content="{x:Static properties:MainLang.ManualAdd}"
                            DockPanel.Dock="Right"
                            FontFamily="{DynamicResource Font}" />
                        <ComboBox
                            Name="JavaComboBox"
                            HorizontalAlignment="Stretch"
                            DockPanel.Dock="Left"
                            FontFamily="{DynamicResource Font}"
                            SelectedIndex="0">
                            <ComboBox.ItemTemplate>
                                <DataTemplate DataType="javaEntry:JavaEntry">
                                    <TextBlock>
                                        <Run Text="[ Java" />
                                        <Run Text="{Binding JavaVersion}" />
                                        <Run Text="]" />
                                        <Run Text="{Binding JavaPath}" />
                                    </TextBlock>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </DockPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Border>
</UserControl>
