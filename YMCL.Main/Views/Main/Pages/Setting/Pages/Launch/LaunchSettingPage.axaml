<UserControl
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d"
    x:Class="YMCL.Main.Views.Main.Pages.Setting.Pages.Launch.LaunchSettingPage"
    xmlns="https://github.com/avaloniaui"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ml="clr-namespace:MinecraftLaunch.Classes.Models.Game;assembly=MinecraftLaunch"
    xmlns:properties="clr-namespace:YMCL.Main.Public.Langs"
    xmlns:uc="clr-namespace:YMCL.Main.Public.Controls"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Border
        CornerRadius="8"
        Margin="0,0,0,0"
        x:Name="Root">
        <Border.Transitions>
            <Transitions>
                <ThicknessTransition
                    Duration="0:0:0.45"
                    Easing="BounceEaseIn"
                    Property="Margin" />
            </Transitions>
        </Border.Transitions>
        <Border Margin="0,10,0,0">
            <ScrollViewer>
                <StackPanel Margin="10,0,10,10" Spacing="10">
                    <Border
                        Background="{DynamicResource 1x}"
                        CornerRadius="5"
                        Opacity="{DynamicResource Opacity}"
                        Padding="6.5">
                        <DockPanel>
                            <TextBlock
                                FontFamily="{DynamicResource Font}"
                                FontSize="14"
                                Margin="10,0,20,0"
                                Text="{x:Static properties:MainLang.MinecraftFolder}"
                                VerticalAlignment="Center" />
                            <Button
                                Content="{x:Static properties:MainLang.DelSeletedItem}"
                                DockPanel.Dock="Right"
                                FontFamily="{DynamicResource Font}"
                                Margin="6.5,0,0,0"
                                x:Name="DelSeletedMinecraftFolderBtn" />
                            <Button
                                Content="{x:Static properties:MainLang.AddFolder}"
                                DockPanel.Dock="Right"
                                FontFamily="{DynamicResource Font}"
                                Margin="6.5,0,0,0"
                                x:Name="AddMinecraftFolderBtn" />
                            <ComboBox
                                DockPanel.Dock="Left"
                                FontFamily="{DynamicResource Font}"
                                HorizontalAlignment="Stretch"
                                x:Name="MinecraftFolderComboBox" />
                        </DockPanel>
                    </Border>
                    <Border
                        Background="{DynamicResource 1x}"
                        CornerRadius="5"
                        Opacity="{DynamicResource Opacity}"
                        Padding="6.5">
                        <DockPanel>
                            <TextBlock
                                FontFamily="{DynamicResource Font}"
                                FontSize="14"
                                Margin="10,0,20,0"
                                Text="Java"
                                VerticalAlignment="Center" />
                            <Button
                                Content="{x:Static properties:MainLang.DeleteSelect}"
                                DockPanel.Dock="Right"
                                FontFamily="{DynamicResource Font}"
                                Margin="6.5,0,0,0"
                                x:Name="RemoveJavaBtn" />
                            <Button
                                Content="{x:Static properties:MainLang.AutoScan}"
                                DockPanel.Dock="Right"
                                FontFamily="{DynamicResource Font}"
                                Margin="6.5,0,0,0"
                                x:Name="AutoScanBtn" />
                            <Button
                                Content="{x:Static properties:MainLang.ManualAdd}"
                                DockPanel.Dock="Right"
                                FontFamily="{DynamicResource Font}"
                                Margin="6.5,0,0,0"
                                x:Name="ManualAddBtn" />
                            <ComboBox
                                DockPanel.Dock="Left"
                                FontFamily="{DynamicResource Font}"
                                HorizontalAlignment="Stretch"
                                Name="JavaComboBox"
                                SelectedIndex="0">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate DataType="ml:JavaEntry">
                                        <TextBlock>
                                            <Run Text="[ Java" />
                                            <Run Text="{Binding JavaVersion}" />
                                            <Run Text="]" />
                                            <Run Text="{Binding JavaPath}" />
                                        </TextBlock>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                        </DockPanel>
                    </Border>
                    <Border
                        Background="{DynamicResource 1x}"
                        CornerRadius="5"
                        Opacity="{DynamicResource Opacity}"
                        Padding="6.5">
                        <DockPanel>
                            <TextBlock
                                FontFamily="{DynamicResource Font}"
                                FontSize="14"
                                Margin="10,0,20,0"
                                Text="{x:Static properties:MainLang.LaunchCore}"
                                VerticalAlignment="Center" />
                            <ComboBox
                                FontFamily="{DynamicResource Font}"
                                HorizontalAlignment="Stretch"
                                Name="LaunchCoreComboBox"
                                SelectedIndex="0">
                                <ComboBox.Items>
                                    <ComboBoxItem>MinecraftLaunch</ComboBoxItem>
                                    <ComboBoxItem>StarLight</ComboBoxItem>
                                </ComboBox.Items>
                            </ComboBox>
                        </DockPanel>
                    </Border>
                    <Border
                        Background="{DynamicResource 1x}"
                        CornerRadius="5"
                        Opacity="{DynamicResource Opacity}"
                        Padding="6.5">
                        <StackPanel Margin="0,5" Spacing="5">
                            <DockPanel>
                                <TextBlock
                                    FontFamily="{DynamicResource Font}"
                                    FontSize="14"
                                    Margin="10,0,20,0"
                                    Text="{x:Static properties:MainLang.MaxMem}"
                                    VerticalAlignment="Center" />
                                <TextBlock
                                    DockPanel.Dock="Right"
                                    FontFamily="{DynamicResource Font}"
                                    FontSize="14"
                                    Margin="6.5,0,6.5,0"
                                    Name="CanUseMemText"
                                    Text="∞"
                                    TextAlignment="Center"
                                    VerticalAlignment="Center"
                                    Width="65" />
                                <TextBlock
                                    DockPanel.Dock="Right"
                                    FontFamily="{DynamicResource Font}"
                                    FontSize="14"
                                    Margin="6.5,0,6.5,0"
                                    Name="MaxMemText"
                                    Text="∞"
                                    TextAlignment="Center"
                                    VerticalAlignment="Center"
                                    Width="65" />
                                <Slider
                                    Margin="0,0,0,0"
                                    Name="MaxMemSlider"
                                    VerticalAlignment="Center" />
                            </DockPanel>
                            <DockPanel Name="UsedMemRoot">
                                <TextBlock
                                    FontFamily="{DynamicResource Font}"
                                    FontSize="14"
                                    Margin="10,0,20,0"
                                    Text="{x:Static properties:MainLang.UsedMem}"
                                    VerticalAlignment="Center" />
                                <TextBlock
                                    DockPanel.Dock="Right"
                                    FontFamily="{DynamicResource Font}"
                                    FontSize="14"
                                    Margin="6.5,0,6.5,0"
                                    Name="UsedMemText"
                                    Text="∞"
                                    TextAlignment="Center"
                                    VerticalAlignment="Center"
                                    Width="65" />
                                <ProgressBar
                                    Margin="0,0,0,0"
                                    Maximum="100"
                                    Name="UsedMemProgressBar"
                                    VerticalAlignment="Center" />
                            </DockPanel>
                        </StackPanel>
                    </Border>
                    <Border
                        Background="{DynamicResource 1x}"
                        CornerRadius="5"
                        Height="40"
                        Opacity="{DynamicResource Opacity}"
                        Padding="6.5">
                        <DockPanel>
                            <TextBlock
                                FontFamily="{DynamicResource Font}"
                                FontSize="14"
                                Margin="10,0,20,0"
                                Text="{x:Static properties:MainLang.EnableIndependencyCore}"
                                VerticalAlignment="Center" />
                            <ToggleSwitch
                                FontFamily="{DynamicResource Font}"
                                Height="40"
                                HorizontalAlignment="Right"
                                Margin="0,-10,10,0"
                                Name="IndependencyCoreSwitch"
                                OffContent="{x:Static properties:MainLang.Off}"
                                OnContent="{x:Static properties:MainLang.On}" />
                        </DockPanel>
                    </Border>
                    <Border
                        Background="{DynamicResource 1x}"
                        CornerRadius="5"
                        Height="40"
                        Opacity="{DynamicResource Opacity}"
                        Padding="6.5">
                        <DockPanel>
                            <TextBlock
                                FontFamily="{DynamicResource Font}"
                                FontSize="14"
                                Margin="10,0,20,0"
                                Text="{x:Static properties:MainLang.ShowGameOutput}"
                                VerticalAlignment="Center" />
                            <ToggleSwitch
                                FontFamily="{DynamicResource Font}"
                                Height="40"
                                HorizontalAlignment="Right"
                                Margin="0,-10,10,0"
                                Name="ShowGameOutputSwitch"
                                OffContent="{x:Static properties:MainLang.Off}"
                                OnContent="{x:Static properties:MainLang.On}" />
                        </DockPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Border>
</UserControl>