<UserControl
    x:Class="YMCL.Main.Views.Main.Pages.Setting.Pages.Download.DownloadSettingPage"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ml="clr-namespace:MinecraftLaunch.Classes.Models.Game;assembly=MinecraftLaunch"
    xmlns:properties="clr-namespace:YMCL.Main.Public.Langs"
    xmlns:uc="clr-namespace:YMCL.Main.Public.Controls"
    xmlns:ui="clr-namespace:FluentAvalonia.UI.Controls;assembly=FluentAvalonia">
    <Border x:Name="Root" CornerRadius="8">
        <Border.Transitions>
            <Transitions>
                <ThicknessTransition
                    Easing="BounceEaseIn"
                    Property="Margin"
                    Duration="0:0:0.45" />
            </Transitions>
        </Border.Transitions>
        <ScrollViewer>
            <StackPanel Margin="10" Spacing="10">
                <Border
                    Padding="6.5"
                    Background="{DynamicResource 1x}"
                    CornerRadius="5"
                    Opacity="{DynamicResource Opacity}">
                    <DockPanel>
                        <TextBlock
                            Margin="10,0,20,0"
                            VerticalAlignment="Center"
                            FontFamily="{DynamicResource Font}"
                            FontSize="14"
                            Text="{x:Static properties:MainLang.DownloadSource}" />
                        <ComboBox
                            x:Name="DownloadSourceComboBox"
                            HorizontalAlignment="Stretch"
                            DockPanel.Dock="Left"
                            FontFamily="{DynamicResource Font}">
                            <ComboBox.Items>
                                <ComboBoxItem>Mojang</ComboBoxItem>
                                <ComboBoxItem>BmclApi</ComboBoxItem>
                            </ComboBox.Items>
                        </ComboBox>
                    </DockPanel>
                </Border>
                <Border
                    Name="CustomUpdateUrlRoot"
                    Padding="6.5"
                    Background="{DynamicResource 1x}"
                    CornerRadius="5"
                    Opacity="{DynamicResource Opacity}">
                    <DockPanel>
                        <TextBlock
                            Name="CustomUpdateUrlLabel"
                            Margin="10,0,20,0"
                            VerticalAlignment="Center"
                            FontFamily="{DynamicResource Font}"
                            FontSize="14"
                            Text="{x:Static properties:MainLang.CustomUpdateUrl}" />
                        <DockPanel HorizontalAlignment="Stretch" DockPanel.Dock="Right">
                            <ComboBox
                                x:Name="CustomUpdateUrlEnableComboBox"
                                Margin="0,0,5,0"
                                HorizontalAlignment="Stretch"
                                FontFamily="{DynamicResource Font}"
                                SelectedIndex="0">
                                <ComboBox.Items>
                                    <ComboBoxItem Content="{x:Static properties:MainLang.Off}" />
                                    <ComboBoxItem Content="{x:Static properties:MainLang.On}" />
                                </ComboBox.Items>
                            </ComboBox>
                            <TextBox
                                Name="CustomUpdateUrlTextBox"
                                HorizontalAlignment="Stretch"
                                FontFamily="{DynamicResource Font}"
                                IsVisible="False" />
                        </DockPanel>
                    </DockPanel>
                </Border>
                <Border
                    Padding="6.5"
                    Background="{DynamicResource 1x}"
                    CornerRadius="5"
                    Opacity="{DynamicResource Opacity}">
                    <DockPanel>
                        <TextBlock
                            Margin="10,0,20,0"
                            VerticalAlignment="Center"
                            FontFamily="{DynamicResource Font}"
                            FontSize="14"
                            Text="{x:Static properties:MainLang.MusicApi}" />
                        <DockPanel HorizontalAlignment="Stretch" DockPanel.Dock="Right">
                            <Button
                                Name="MusicApiButton"
                                Margin="0,0,5,0"
                                Content="{x:Static properties:MainLang.ProjectInfo}" />
                            <TextBox
                                Name="MusicApiTextBox"
                                HorizontalAlignment="Stretch"
                                FontFamily="{DynamicResource Font}" />
                        </DockPanel>
                    </DockPanel>
                </Border>
                <Border
                    Height="40"
                    Padding="6.5"
                    Background="{DynamicResource 1x}"
                    CornerRadius="5"
                    Opacity="{DynamicResource Opacity}">
                    <DockPanel>
                        <TextBlock
                            Margin="10,0,20,0"
                            VerticalAlignment="Center"
                            FontFamily="{DynamicResource Font}"
                            FontSize="14"
                            Text="{x:Static properties:MainLang.MaximumDownloadThread}" />
                        <TextBlock
                            Name="MaximumDownloadThreadText"
                            Width="65"
                            Margin="3,0,3,0"
                            VerticalAlignment="Center"
                            DockPanel.Dock="Right"
                            FontFamily="{DynamicResource Font}"
                            FontSize="14"
                            Text="��"
                            TextAlignment="Center" />
                        <Slider
                            Name="MaximumDownloadThreadSlider"
                            VerticalAlignment="Center"
                            Maximum="256"
                            Minimum="8"
                            Value="32" />
                    </DockPanel>
                </Border>
                <ui:InfoBar
                    Name="DownloadThreadWarning"
                    FontFamily="{DynamicResource Font}"
                    IsClosable="False"
                    IsOpen="True"
                    IsVisible="False"
                    Message="{x:Static properties:MainLang.DownloadThreadTooBigTip}"
                    Opacity="{DynamicResource Opacity}"
                    Severity="Warning" />
                <Border
                    Height="40"
                    Padding="6.5"
                    Background="{DynamicResource 1x}"
                    CornerRadius="5"
                    Opacity="{DynamicResource Opacity}">
                    <DockPanel>
                        <TextBlock
                            Margin="10,0,20,0"
                            VerticalAlignment="Center"
                            FontFamily="{DynamicResource Font}"
                            FontSize="14"
                            Text="{x:Static properties:MainLang.AutoUpdate}" />
                        <ToggleSwitch
                            Name="AutoUpdateSwitch"
                            Height="40"
                            Margin="0,-10,10,0"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            FontFamily="{DynamicResource Font}"
                            OffContent="{x:Static properties:MainLang.Off}"
                            OnContent="{x:Static properties:MainLang.On}" />
                    </DockPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Border>
</UserControl>