                            Margin="0,1,0,0"
                            Text="{Binding Source={x:Static properties:LangHelper.Current}, Path=Resources.Search}"
                            VerticalAlignment="Center" />
                    </DockPanel>
                </Button>
                <TextBox
                    DockPanel.Dock="Left"
                    Margin="0,0,5,0"
                    Name="SearchBox"
                    VerticalAlignment="Top" />
            </DockPanel>
            <ScrollViewer DockPanel.Dock="Bottom" Name="SongListViewScroll">
                <StackPanel>
                    <ListBox
                        ItemsSource="{Binding SearchSongEntries}"
                        Margin="10,0,10,0"
                        Name="SearchSongListView"
                        SelectedItem="{Binding UiProperty.SelectedSearchSong}">
                        <ListBox.ItemTemplate>
                            <DataTemplate DataType="netease:RecordSongEntry">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock
                                        Foreground="{DynamicResource GrayColor}"
                                        Margin="0,0,6,0"
                                        Text="{Binding DisplayNumber}"
                                        VerticalAlignment="Center" />
                                    <StackPanel Margin="0,3">
                                        <TextBlock TextWrapping="Wrap">
                                            <Run FontFamily="{DynamicResource Font}" Text="{Binding SongName}" />
                                            <Run
                                                FontFamily="{DynamicResource Font}"
                                                FontSize="12"
                                                Foreground="{DynamicResource GrayColor}"
                                                Text="{Binding DisplayDuration}" />
                                        </TextBlock>
                                        <TextBlock
                                            FontFamily="{DynamicResource Font}"
                                            FontSize="12"
                                            Foreground="{DynamicResource GrayColor}"
                                            Text="{Binding SongAuthors}"
                                            TextWrapping="Wrap" />
                                    </StackPanel>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    <ui:ProgressRing
                        Height="48"
                        IsVisible="False"
                        Margin="0,50,0,50"
                        Name="Loading"
                        Width="48" />
                    <HyperlinkButton
                        Classes="accent"
                        HorizontalAlignment="Center"
                        IsVisible="False"
                        Margin="0,50,0,50"
                        Name="LoadMoreBtn">
                        <TextBlock FontFamily="{DynamicResource Font}" TextDecorations="{x:Null}">
                            <Run Text="→" />
                            <Run Text="{Binding Source={x:Static properties:LangHelper.Current}, Path=Resources.LoadMore}" />
                            <Run Text="←" />
                        </TextBlock>
                    </HyperlinkButton>
                </StackPanel>
            </ScrollViewer>
        </DockPanel>
