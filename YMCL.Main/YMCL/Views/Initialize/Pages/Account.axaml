                                                </DrawingGroup.Children>
                                                <DrawingGroup.ClipGeometry>
                                                    <RectangleGeometry Rect="0,0,1024,1024" />
                                                </DrawingGroup.ClipGeometry>
                                            </DrawingGroup>
                                        </DrawingImage.Drawing>
                                    </DrawingImage>
                                </Image.Source>
                            </Image>
                            <TextBlock
                                FontFamily="{DynamicResource Font}"
                                Foreground="{DynamicResource SystemAccentColor}"
                                Text="{Binding Source={x:Static properties:LangHelper.Current}, Path=Resources.AddNewAccount}"
                                TextDecorations="{x:Null}" />
                        </StackPanel>
                    </HyperlinkButton>
                </WrapPanel>
            </DockPanel>
            <DockPanel>
                <StackPanel Margin="0,10,25,80" VerticalAlignment="Center">
                    <TextBlock DockPanel.Dock="Top" FontFamily="{DynamicResource Font}">
                        <Run Text="{Binding Source={x:Static properties:LangHelper.Current}, Path=Resources.ExistingNow}" />
                        <Run Text=":" />
                    </TextBlock>
                    <ListBox
                        DockPanel.Dock="Top"
                        Margin="0,10,20,0"
                        MaxHeight="320"
                        Name="AccountListBox"
                        SelectedIndex="0"
                        VerticalAlignment="Top">
                        <ListBox.ItemTemplate>
                            <DataTemplate DataType="cl:AccountInfo">
                                <Border BorderThickness="0,6,0,6">
                                    <DockPanel>
                                        <Border
                                            ClipToBounds="True"
                                            CornerRadius="3,3,3,3"
                                            Height="28"
                                            Margin="2,0,6.5,0"
                                            Width="28">
                                            <Image Source="{Binding Bitmap}" />
                                        </Border>
                                        <Grid>
                                            <TextBlock
                                                FontFamily="{DynamicResource Font}"
                                                FontSize="14"
                                                Text="{Binding Name}" />
                                            <StackPanel Margin="0,17,0,0" Orientation="Horizontal">
                                                <TextBlock
                                                    FontFamily="{DynamicResource Font}"
                                                    FontSize="11"
                                                    Foreground="{DynamicResource GrayColor}"
                                                    Margin="0,0,0,0"
                                                    Text="{Binding AccountType}" />
                                                <TextBlock
                                                    FontFamily="{DynamicResource Font}"
                                                    FontSize="11"
                                                    Foreground="{DynamicResource GrayColor}"
                                                    Margin="5,0,0,0"
                                                    Text="{Binding AddTime}" />
                                            </StackPanel>
                                        </Grid>
                                    </DockPanel>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </StackPanel>
            </DockPanel>
        </DockPanel>
    </Grid>
</UserControl>
