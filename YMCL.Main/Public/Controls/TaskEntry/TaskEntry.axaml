<UserControl
    FontFamily="{DynamicResource Font}"
    FontWeight="{DynamicResource FontWeight}"
    mc:Ignorable="d"
    x:Class="YMCL.Main.TaskEntry"
    xmlns="https://github.com/avaloniaui"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Border
        Background="{DynamicResource 2x}"
        ClipToBounds="True"
        CornerRadius="5">
        <DockPanel>
            <DockPanel
                DockPanel.Dock="Top"
                Margin="10,7"
                VerticalAlignment="Top">
                <StackPanel DockPanel.Dock="Left" Orientation="Horizontal">
                    <TextBlock Name="TaskNumber" Text="#1" />
                    <TextBlock Text=" " />
                    <TextBlock Name="TaskName" Text="TaskName" />
                </StackPanel>
                <TextBlock
                    DockPanel.Dock="Right"
                    Name="TaskProgressBarText"
                    Text="0%" />
                <ProgressBar
                    DockPanel.Dock="Left"
                    Margin="10,0"
                    Name="TaskProgressBar"
                    Value="0" />
            </DockPanel>
            <TextBox
                DockPanel.Dock="Bottom"
                Margin="10,0,10,10"
                Name="TaskTextBox" />
        </DockPanel>
    </Border>
</UserControl>