<UserControl
    x:Class="YMCL.Main.Views.Main.Pages.Setting.Pages.Download.DownloadSettingPage"
    xmlns="https://github.com/avaloniaui"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ml="clr-namespace:MinecraftLaunch.Classes.Models.Game;assembly=MinecraftLaunch"
    xmlns:properties="clr-namespace:YMCL.Main.Public.Langs"
    xmlns:uc="clr-namespace:YMCL.Main.Public.Controls"
    xmlns:ui="clr-namespace:FluentAvalonia.UI.Controls;assembly=FluentAvalonia"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Border CornerRadius="8" x:Name="Root">
        <Border.Transitions>
            <Transitions>
                <ThicknessTransition
                    Duration="0:0:0.45"
                    Easing="BounceEaseIn"
                    Property="Margin" />
            </Transitions>
        </Border.Transitions>
        <ScrollViewer>
            <StackPanel Margin="10" Spacing="10">
                <Border
                    Background="{DynamicResource 1x}"
                    CornerRadius="5"
                    Opacity="{DynamicResource Opacity}"
                    Padding="6.5">
                    <DockPanel>
                        <TextBlock
                            FontFamily="{DynamicResource Font}"
                            FontSize="14"
                            Margin="10,0,20,0"
                            Text="{x:Static properties:MainLang.DownloadSource}"
                            VerticalAlignment="Center" />
                        <ComboBox
                            DockPanel.Dock="Left"
                            FontFamily="{DynamicResource Font}"
                            HorizontalAlignment="Stretch"
                            x:Name="DownloadSourceComboBox">
                            <ComboBox.Items>
                                <ComboBoxItem>Mojang</ComboBoxItem>
                                <ComboBoxItem>BmclApi</ComboBoxItem>
                            </ComboBox.Items>
                        </ComboBox>
                    </DockPanel>
                </Border>
                <Border
                    Background="{DynamicResource 1x}"
                    CornerRadius="5"
                    Name="CustomUpdateUrlRoot"
                    Opacity="{DynamicResource Opacity}"
                    Padding="6.5">
                    <DockPanel>
                        <TextBlock
                            FontFamily="{DynamicResource Font}"
                            FontSize="14"
                            Margin="10,0,20,0"
                            Name="CustomUpdateUrlLabel"
                            Text="{x:Static properties:MainLang.CustomUpdateUrl}"
                            VerticalAlignment="Center" />
                        <DockPanel DockPanel.Dock="Right" HorizontalAlignment="Stretch">
                            <ComboBox
                                FontFamily="{DynamicResource Font}"
                                HorizontalAlignment="Stretch"
                                Margin="0,0,5,0"
                                SelectedIndex="0"
                                x:Name="CustomUpdateUrlEnableComboBox">
                                <ComboBox.Items>
                                    <ComboBoxItem Content="{x:Static properties:MainLang.Off}" />
                                    <ComboBoxItem Content="{x:Static properties:MainLang.On}" />
                                </ComboBox.Items>
                            </ComboBox>
                            <TextBox
                                FontFamily="{DynamicResource Font}"
                                HorizontalAlignment="Stretch"
                                IsVisible="False"
                                Name="CustomUpdateUrlTextBox" />
                        </DockPanel>
                    </DockPanel>
                </Border>
                <Border
                    Background="{DynamicResource 1x}"
                    CornerRadius="5"
                    Name="MusicApiRoot"
                    Opacity="{DynamicResource Opacity}"
                    Padding="6.5">
                    <DockPanel>
                        <TextBlock
                            FontFamily="{DynamicResource Font}"
                            FontSize="14"
                            Margin="10,0,20,0"
                            Text="{x:Static properties:MainLang.MusicApi}"
                            VerticalAlignment="Center" />
                        <DockPanel DockPanel.Dock="Right" HorizontalAlignment="Stretch">
                            <Button
                                Content="{x:Static properties:MainLang.ProjectInfo}"
                                Margin="0,0,5,0"
                                Name="MusicApiButton" />
                            <TextBox
                                FontFamily="{DynamicResource Font}"
                                HorizontalAlignment="Stretch"
                                Name="MusicApiTextBox" />
                        </DockPanel>
                    </DockPanel>
                </Border>
                <Border
                    Background="{DynamicResource 1x}"
                    CornerRadius="5"
                    Height="40"
                    Opacity="{DynamicResource Opacity}"
                    Padding="6.5">
                    <DockPanel>
                        <DockPanel>
                            <TextBlock
                                FontFamily="{DynamicResource Font}"
                                FontSize="14"
                                Margin="10,0,20,0"
                                Text="{x:Static properties:MainLang.MaxFileFragmentation}"
                                VerticalAlignment="Center" />
                            <TextBlock
                                DockPanel.Dock="Right"
                                FontFamily="{DynamicResource Font}"
                                FontSize="14"
                                Margin="3,0,3,0"
                                Name="MaxFileFragmentationText"
                                Text="0"
                                TextAlignment="Center"
                                VerticalAlignment="Center"
                                Width="65" />
                            <Slider
                                Maximum="64"
                                Minimum="1"
                                Name="MaxFileFragmentationSlider"
                                Value="8"
                                VerticalAlignment="Center" />
                        </DockPanel>
                    </DockPanel>
                </Border>
                <Border
                    Background="{DynamicResource 1x}"
                    CornerRadius="5"
                    Height="40"
                    Opacity="{DynamicResource Opacity}"
                    Padding="6.5">
                    <DockPanel>
                        <TextBlock
                            FontFamily="{DynamicResource Font}"
                            FontSize="14"
                            Margin="10,0,20,0"
                            Text="{x:Static properties:MainLang.MaximumDownloadThread}"
                            VerticalAlignment="Center" />
                        <TextBlock
                            DockPanel.Dock="Right"
                            FontFamily="{DynamicResource Font}"
                            FontSize="14"
                            Margin="3,0,3,0"
                            Name="MaximumDownloadThreadText"
                            Text="0"
                            TextAlignment="Center"
                            VerticalAlignment="Center"
                            Width="65" />
                        <Slider
                            Maximum="256"
                            Minimum="8"
                            Name="MaximumDownloadThreadSlider"
                            Value="32"
                            VerticalAlignment="Center" />
                    </DockPanel>
                </Border>
                <ui:InfoBar
                    FontFamily="{DynamicResource Font}"
                    IsClosable="False"
                    IsOpen="True"
                    IsVisible="False"
                    Message="{x:Static properties:MainLang.DownloadThreadTooBigTip}"
                    Name="DownloadThreadWarning"
                    Opacity="{DynamicResource Opacity}"
                    Severity="Warning" />
                <Border
                    Background="{DynamicResource 1x}"
                    CornerRadius="5"
                    Height="40"
                    Opacity="{DynamicResource Opacity}"
                    Padding="6.5">
                    <DockPanel>
                        <TextBlock
                            FontFamily="{DynamicResource Font}"
                            FontSize="14"
                            Margin="10,0,20,0"
                            Text="{x:Static properties:MainLang.AutoUpdate}"
                            VerticalAlignment="Center" />
                        <ToggleSwitch
                            FontFamily="{DynamicResource Font}"
                            Height="40"
                            HorizontalAlignment="Right"
                            Margin="0,-10,10,0"
                            Name="AutoUpdateSwitch"
                            OffContent="{x:Static properties:MainLang.Off}"
                            OnContent="{x:Static properties:MainLang.On}"
                            VerticalAlignment="Center" />
                    </DockPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Border>
</UserControl>