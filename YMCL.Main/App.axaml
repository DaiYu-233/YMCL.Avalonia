<Application
    x:Class="YMCL.Main.App"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:fa="clr-namespace:FluentAvalonia.UI.Controls;assembly=FluentAvalonia"
    xmlns:sty="using:FluentAvalonia.Styling"
    RequestedThemeVariant="Default">
    <!--  "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options.  -->
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceInclude Source="/Public/Styles/IconPath.axaml" />
                <ResourceInclude Source="/Public/Styles/LightTheme.axaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
    <Application.Resources>
        <FontFamily x:Key="Font">avares://YMCL.Main/Public/Assets#MiSans</FontFamily>
    </Application.Resources>

    <Application.Styles>
        <StyleInclude Source="/Public/Styles/Style.axaml" />
		<sty:FluentAvaloniaTheme />
    </Application.Styles>
</Application>