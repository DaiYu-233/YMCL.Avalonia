                                    </MenuItem.Icon>
                                </MenuItem>
                            </MenuFlyout>
                        </Border.ContextFlyout>
                    </Border>
                </DockPanel>
            </Border>
            <DockPanel>
                <StackPanel
                    DockPanel.Dock="Top"
                    HorizontalAlignment="Stretch"
                    Margin="10,10,0,0"
                    Name="LaunchingPanel"
                    Spacing="10"
                    VerticalAlignment="Top" />
                <Border
                    ClipToBounds="True"
                    CornerRadius="{DynamicResource MainCornerRadius}"
                    HorizontalAlignment="Stretch"
                    Margin="10,0,0,10"
                    Name="CustomPageRoot"
                    VerticalAlignment="Stretch">
                    <Border.Transitions>
                        <Transitions>
                            <DoubleTransition Duration="0:0:0.20" Property="Opacity" />
                        </Transitions>
                    </Border.Transitions>
                </Border>
            </DockPanel>
        </DockPanel>
        <ContentControl
            IsVisible="False"
            Margin="30"
            Name="GameListFrame"
            Opacity="{DynamicResource MainOpacity}">
            <ContentControl.Transitions>
                <Transitions>
                    <ThicknessTransition Duration="0:0:0.20" Property="Margin" />
                    <DoubleTransition Duration="0:0:0.20" Property="Opacity" />
                </Transitions>
            </ContentControl.Transitions>
        </ContentControl>
        <ContentControl
            IsVisible="False"
            Margin="30"
            Name="GameSettingFrame"
            Opacity="{DynamicResource MainOpacity}">
            <ContentControl.Transitions>
                <Transitions>
                    <ThicknessTransition Duration="0:0:0.20" Property="Margin" />
                    <DoubleTransition Duration="0:0:0.20" Property="Opacity" />
                </Transitions>
            </ContentControl.Transitions>
        </ContentControl>
    </Grid>
</UserControl>